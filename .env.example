# Configuration d'environnement pour StockManager
# Copier ce fichier en .env et personnaliser les valeurs

# Django Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOST=stockmanager.your-domain.com

# Database (SQLite par défaut)
DATABASE_PATH=/app/db.sqlite3

# Registry Docker
REGISTRY_URL=your-registry.com
IMAGE_NAME=stockmanager
TAG=latest 

# Déploiement
CONTAINER_NAME=stockmanager-app
NETWORK_NAME=stockmanager-network
HOST_PORT=8004
CONTAINER_PORT=8004

# Logs
LOG_LEVEL=INFO
LOG_FILE=/app/logs/prod.txt

# Gunicorn Configuration
WORKERS=2
TIMEOUT=60
